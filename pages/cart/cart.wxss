
page {
    background-color: #F5F3F3;
}

.wrap {
    width: 690rpx;
    border-radius: 12rpx;
    background-color: #fff;
    margin: 30rpx;
    padding-bottom: 28rpx;
    border-top: 1rpx solid #fff;
}

.shop_name {
    padding-top: 30rpx;
    align-items: center;
    font-size: 28rpx;
    color: #282828;
    padding-left: 25rpx;
}

.iconxuanzhong {
    font-size: 30rpx;
    color: #E02907;
    padding-right: 25rpx;
}

.iconweixuanzhong {
    font-size: 30rpx;
    padding-right: 25rpx;
}

.icondianpu {
    font-size: 26rpx;
    margin-right: 22rpx;
}

.cart_goods_img {
    width: 200rpx;
    max-height: 200rpx;
    background-color: #ccc;
    margin-right: 25rpx;
}

.cart_goods_list {
    align-items: center;
    flex-wrap: nowrap;
    width: 730rpx;
}

.cart_goods_right {
    max-width: 355rpx;
    width: 355rpx;
    height: 200rpx;
    color: #282828;
}

.cart_goods_right .txt {
    font-size: 24rpx;
    line-height: 36rpx;
    min-height: 72rpx;
}

.cart_goods_right .txt1 {
    display: inline-block;
    padding: 0 20rpx;
    height: 38rpx;
    border-radius: 20rpx;
    background-color: #F3F3F3;
    text-align: center;
    line-height: 38rpx;
    font-size: 22rpx;
    margin-top: 15rpx;
    margin-bottom: 12rpx;
}


.cart_goods_right .txt2 {
    justify-content: space-between;
    line-height: 32rpx;
    margin-top: 15rpx;
}

.cart_goods_right .price {
    font-size: 30rpx;
    color: #DE2910;
    font-weight: 600;
}

.cart_goods_right  .num_btn {

}

.cart_goods_right  .num_btn .num {
    width: 80rpx;
    height: 32rpx;
    background-color: #eee;
    border-radius: 26rpx;
    font-size: 24rpx;
    color: #282828;
    font-weight: 600;
    text-align: center;
    line-height: 32rpx;
}

.iconjianhaocu {
    padding-right: 20rpx;
    font-size: 28rpx;
}

.iconjiahao {
    padding-left: 20rpx;
    font-size: 28rpx;
}

.cart_goods_right .bottom {
    font-size: 20rpx;
    line-height: 1;
    margin-top: 12rpx;
    color: #DE2910;
}

.hot_goods {
    margin-bottom: 40rpx;
    margin-top: 40rpx;
    justify-content: center;
    align-items: center;
}

.hot_goods .txt {
    font-size: 32rpx;
    color: #282828;
    font-weight: 600;
    text-align: center;
    line-height: 32rpx;
    margin: 0 20rpx;
}

.iconhot {
    color: #F07E65;
    font-size: 28rpx;
}

.right_bor, .left_bor {
    position: relative;
}

.hot_goods .bor {
    width: 42rpx;
    height: 4rpx;
    background-color: #DDD;
}

.hot_goods .left_bor {
    margin-right: 20rpx;
}

.hot_goods .right_bor {
    margin-left: 20rpx;
}

.disable {
    color: #9a9a9a;
}

.pay_btn {
    width: 690rpx;
    height: 88rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #f8f8f8;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
}

.close_account {
    width: 200rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #DE2910;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    margin-top: 4rpx;
}

.delete {
    height: 200rpx;
    width: 90rpx;
    background-color: #DE2910;
    color: #fff;
    align-items: center;
    font-size: 30rpx;
    justify-content: center;
    margin-left: 10rpx;
}

.scroll {
    width: 640rpx;
    padding: 0 25rpx;
    overflow: hidden;
    height: 200rpx;
    margin-top: 30rpx;
}

.empty_img {
    width: 200rpx;
    max-height: 200rpx;
    display: block;
    margin: 50rpx auto 10rpx;
}

.empty_txt {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 30rpx;
}