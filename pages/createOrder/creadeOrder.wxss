page {
    background-color: #F3F3F3;
}

.address {
    width: 690rpx;
    padding: 25rpx 0;
    background-color: #fff;
    border-radius: 12rpx;
    margin: 20rpx 30rpx 20rpx;
    align-items: center;
    color: #999;
    justify-content: space-between;
}

.address1 {
    justify-content: flex-start;
}

.address .left {
    align-items: center;
}

.address .txt {
    font-size: 28rpx;
}

.address .icondizhi {
    font-size: 36rpx;
    margin: 0 20rpx 0 25rpx;
}

.icondizhi2 {
    font-size: 36rpx;
    margin: 0 16rpx 0 25rpx;
    color: #877C30;
}

.address .icontubiao- {
    font-size: 30rpx;
    margin-right: 10rpx;
}

.userinfo {
    font-size: 30rpx;
    color: #282828;
}

.address1 .addr_name {
    color: #282828;
    font-size: 28rpx;
    line-height: 42rpx;
    margin-top: 20rpx;
    max-width: 600rpx;
}

.goods_detail {
    width: 634rpx;
    background-color: #fff;
    border-radius: 12rpx;
    margin: 0 30rpx 20rpx;
    padding: 0 28rpx;
}

.goods_info {
    padding-top: 36rpx;
}

.goods_right .top {
    justify-content: space-between;
    font-weight: 600;
}

.goods_right {
    width: 406rpx;
}

.goods_name {
    font-size: 24rpx;
    color: #282828;
    line-height: 30rpx;
    max-width: 260rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods_img {
    background-color: #cccccc;
    width: 200rpx;
    height: 200rpx;
    margin: 0 28rpx 28rpx 0;
}

.goods_price {
    text-align: right;
    font-size: 26rpx;
    color: #666666;
    line-height: 1;
}

.goods_num {
    display: inline-block;
    font-size: 22rpx;
    color: #282828;
    padding: 8rpx 12rpx;
    border-radius: 20rpx;
    margin-top: 16rpx;
    margin-bottom: 50rpx ;
    background-color: #F3F3F3;
}

.shop_title {
    padding-top: 36rpx;
    font-size: 28rpx;
    color: #282828;
    align-items: center;
    font-weight: 600;
}
.icondianpu {
    margin-right: 22rpx;
}

.total {
    font-size: 26rpx;
    color: #282828;
    text-align: right;
}

.price_detail {
    width: 634rpx;
    border-radius: 12rpx;
    margin: 20rpx 30rpx 0;
    background-color: #fff;
    padding: 28rpx 28rpx 0;
}

.goods_detail .item {
    justify-content: space-between;
    padding-bottom: 28rpx;
    font-size: 26rpx;
    color: #282828;
}

.remake_wrap {
    align-items: center;
    height: 72rpx;
}

.remark {
    font-size:26rpx;
    color: #282828;
}

.area {
    margin-left: 20rpx;
    font-size: 26rpx;
    width: 450rpx;
}

.order_btn {
    position: fixed;
    width: 750rpx;
    height: 120rpx;
    background-color: #fff;
    bottom: 0;
    left: 0;
}

.order_btn .left {
    text-align: right;
    position: absolute;
    right: 242rpx;
    display: flex;
    align-items: center;
    line-height: 1;
    top: 54rpx;
}

.submit {
    width: 202rpx;
    height: 120rpx;
    background-color: #DE2910;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    line-height: 120rpx;
    font-weight: 600;
    position: absolute;
    right: 0;
}

.pay_success {
    width: 690rpx;
    border-radius: 12rpx;
    margin: 30rpx;
    background-color: #fff;
    padding-top: 40rpx;
}

.avatar_img {
    width: 120rpx;
    max-height: 120rpx;
    background-color: #eee;
    display: block;
    margin: 0 auto 30rpx;
    border-radius: 60rpx;
}

.iconchenggong {
    font-size: 30rpx;
    color: #1D921D;
    margin-right: 15rpx;
}

.success {
    justify-content: center;
    align-items: center;
}

.success_txt {
    text-align: center;
    font-size: 28rpx;
    color: #333;
}

.pay_num {
    margin-top: 25rpx;
    text-align: center;
    font-size: 28rpx;
    color: #333;
    line-height: 1;
}

.another {
    width: 144rpx;
    height: 48rpx;
    border-radius: 24rpx;
    border: 1rpx solid rgba(222,41,16,1);
    color: #DE2910;
    font-size: 26rpx;
    text-align: center;
    line-height: 48rpx;
    margin: 25rpx auto 0;
}

.order_detail {
    margin: 0 auto;
    width: 300rpx;
    font-size: 24rpx;
    color: #666;
    padding-top: 25rpx;
    justify-content: center;
}

.hot_goods {
    margin-bottom: 40rpx;
    margin-top: 40rpx;
    justify-content: center;
    align-items: center;
}

.hot_goods .txt {
    font-size: 32rpx;
    color: #282828;
    font-weight: 600;
    text-align: center;
    line-height: 32rpx;
    margin: 0 20rpx;
}

.iconhot {
    color: #F07E65;
    font-size: 28rpx;
}

.right_bor, .left_bor {
    position: relative;
}

.hot_goods .bor {
    width: 42rpx;
    height: 4rpx;
    background-color: #DDD;
}

.hot_goods .left_bor {
    margin-right: 20rpx;
}

.hot_goods .right_bor {
    margin-left: 20rpx;
}
