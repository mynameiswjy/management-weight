.swiper {
}

.swiper_img {
    width: 100%;
    max-height: 242rpx;
}

.slot {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 9rpx;
}

.slot-item {
    width: 12rpx;
    height: 13rpx;
    background:rgba(255,255,255, 0.7);
    border-radius:6rpx;
    margin-right: 20rpx;
}

.slot-item-active {
    width: 27rpx;
    height: 13rpx;
    background-color: #fff;
    border-radius:6rpx;
    margin-right: 20rpx;
}
