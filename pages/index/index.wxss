.top_bg {
    width: 750rpx;
    height: 270rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.top_bg_content {
    background-color: #E44A3D;
    height: 2500rpx;
    width: 2500rpx;
    border-radius: 1250rpx;
    background-position: 500rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.iconkefu2 {
    font-size: 49rpx;
    color: #fff;
    margin-top: 12rpx;
}

.search {
    align-items: center;
    width: 618rpx;
    height: 57rpx;
    border-radius: 29rpx;
    background-color: #fff;
    margin: 30rpx 30rpx 30rpx;
    color: #BCBCBC;
}

.iconsousuo1 {
    font-size: 32rpx;
    line-height: 57rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.search_input {
    line-height: 57rpx;
    height: 57rpx;
    font-size: 32rpx;
}

.banner {
    width: 690rpx;
    height: 242rpx;
    margin: 0 30rpx;
    position: relative;
    border-radius: 8rpx;
    overflow: hidden;
}

.swiper {
}

.swiper_img {
    width: 100%;
    max-height: 242rpx;
}

.slot {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 9rpx;
}

.slot-item {
    width: 12rpx;
    height: 13rpx;
    background:rgba(255,255,255, 0.7);
    border-radius:6rpx;
    margin-right: 20rpx;
}

.slot-item-active {
    width: 27rpx;
    height: 13rpx;
    background-color: #fff;
    border-radius:6rpx;
    margin-right: 20rpx;
}

.small_ad {
    width:660rpx;
    background: #fff;
    border-radius: 12rpx;
    margin: 20rpx 30rpx 20rpx;
    padding: 0 15rpx 5rpx;
}

.ad_swiper {
    width: 660rpx;
    height: 187rpx;
    border-radius:12rpx;
    background-color: #fff;
}

.ad_swiper {
    font-weight: 600;
}

.ad_item {
    align-items: center;
    position: relative;
}

.ad_item .ad_item_item {
    margin-left: 40rpx;
}

.ad_item .ad_item_item .txt1 {
    font-size: 24rpx;
    color: #FC6419;
    text-align: center;
    line-height: 1;
}

.ad_item .ad_item_item .txt2 {
    font-size: 20rpx;
    color: #FC6419;
    text-align: center;
    line-height: 1;
    margin-top: 8rpx 0 5rpx;
    border: 3rpx solid #F4BE93;
    padding: 5rpx 10rpx;
    border-radius: 6rpx;
}

.ad_item .ad_img {
    width: 144rpx;
    max-height: 122rpx;
    background-color: #bfa;
    margin-top: 6rpx;
}

.ad_item .ad_right {
    width: 40rpx;
    max-height: 40rpx;
    margin: 38rpx auto 0;
}

.ad_item .rush {
    padding-top: 20rpx;
    font-size: 28rpx;
    color: #E44A3D;
    width: 162rpx;
    text-align: center;
    line-height: 33rpx;
    position: absolute;
    right: 0;
}

.hot_goods {
    width:750rpx;
    /*background: #fff;*/
    border-radius:12rpx;
    position: relative;
    padding: 0 0rpx 19rpx;
    box-sizing: border-box;
}

.hot_goods .title {
    font-size:42rpx;
    color: #fff;
    line-height: 1;
    padding-top: 25rpx;
    margin-bottom: 22rpx;
    justify-content: center;
    font-weight: 600;
}

.hot_goods .hot_img {
    width: 32rpx;
    max-height: 45rpx;
    display: block;
    margin-right: 28rpx;
}

.hot_goods .more_hot_goods {
    position: absolute;
    top: 0rpx;
    right: 50rpx;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #fff;
    padding-top: 30rpx;
    align-items: center;
}

.iconxiangyoujiantou {
    font-size: 40rpx;
    color: #fff;
    margin-left: 6rpx;
    line-height: 1;
}

.hot_goods_item_wrap {
    flex-wrap: wrap;
    flex-direction: row;
    margin-left: 30rpx;
}

.hot_goods .hot_goods_item {
    width: 338rpx;
    border: 1rpx solid #fff;
    margin-bottom: 10rpx;
    overflow: hidden;
    border-radius: 10rpx;
}

.hot_goods .hot_goods_img {
    width: 336rpx;
    max-height: 312rpx;
    margin: 0 1rpx;
    background-color: #ccc;
    display: block;
    border-radius: 10rpx;
}

.goods_list_nav {
    position: fixed;
    top: 0;
    width: 750rpx;
    background-color: #FAF7FA;
}

