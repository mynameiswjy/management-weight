@import "iconfont.wxss";

view, text, button, textarea {
    font-family:PingFang SC;
}

image {
    display: block;
}

.flex {
    display: flex;
}

button {
    border: 0;
    background: none;
    padding: 0;
    margin: 0;
    text-align: inherit;
    line-height: inherit;
    color: inherit;
    border-radius: 0;
}

button::after {
    border: 0;
    width: inherit;
    height: inherit;
}


.is-end {
    font-size: 26rpx;
    color: #ccc;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.weui-loading {
    margin: 10px 5px 10px 0;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    background:  url('http://img02.exam8.com/img2017/minapp/icon/loading.gif') no-repeat;
    background-size: 100%;
}

.weui-loadmore {
    width: 65%;
    color: #9a9a9a;
    margin: 1.5rpx auto;
    line-height: 1.6rpx;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore_tips {
    display: inline-block;
    vertical-align: middle;
}

.empty {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.empty_img {
    width: 200rpx;
    max-height: 200rpx;
    display: block;
    margin: 50rpx auto 30rpx;
}

.empty_txt {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 30rpx;
}