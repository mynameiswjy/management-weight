    line-height: 39rpx;
    margin: 20rpx auto;
}

.imgs_wrap {
    justify-content: left;
    margin-left: 35rpx;
}

.all_estimate {
    width: 243rpx;
    height: 63rpx;
    border: 2rpx solid #A6A1A1;
    border-radius: 32rpx;
    font-size:30rpx;
