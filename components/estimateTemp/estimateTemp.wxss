 .flex {
     display: flex;
 }

.wrap {
    margin: 10rpx 0 50rpx 0;
}

.avatar {
    width: 98rpx;
    max-height: 98rpx;
    display: block;
    margin: 0 15rpx 0 13rpx;
    border-radius: 49rpx;
}

.top {
    align-items: center;
    justify-content: space-between;
}

.user_info {
    align-items: flex-end;
}

.user_name {
    font-size: 30rpx;
    color: #1A1A1A;
}

.date {
    font-size: 30rpx;
    color: #1A1A1A;
    margin-right: 28rpx;
}

.imgs {
    width: 214rpx;
    max-height: 225rpx;
    background-color: #666666;
}

.iconxingxing1 {
