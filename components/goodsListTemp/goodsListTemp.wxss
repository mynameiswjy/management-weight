@import "../../iconfont.wxss";

.flex {
    display: flex;
    flex-wrap: wrap;
}

.left {
    float: left;
}

.right {
    float: right;
}

.goods_list {
    padding: 0 30rpx;
}

.goods_list1 {
    background-color: #F4F1F4;
    width: 750rpx;
}

.item {
    width: 340rpx;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
}

.item_img {
    width: 340rpx;
    max-height: 293rpx;
    background-color: #bfa;
}

.item_name {
    font-size: 24rpx;
    line-height: 26rpx;
    color: #403C3C;
    max-width: 296rpx;
    margin: 18rpx auto 25rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.price {
    align-items: center;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
}

.actual_price {
    color: #CD3C26;
    font-weight: 600;
    align-items: center;
    margin-right: 15rpx;
}

.actual_price .txt1 {
    font-size: 38rpx;
}

.actual_price .txt2 {
    font-size: 30rpx;
}

.share_price {
    padding: 3rpx 4rpx;
    border: 2rpx solid #EB8533;
    border-radius: 6rpx;
    color: #EB8533;
    align-items: center;
    line-height: 1;
    max-height: 31rpx;
}

.hot_goods {
    color: #2E97F5;
    font-size: 24rpx;
    text-align: center;
    margin-bottom: 30rpx;
}